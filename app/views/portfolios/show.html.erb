<h3><%= @portfolio.title %></h3>

<ul>
  <% @positions.each do |position| %>
    <li>
      <%= position.short ? 'SHORT' : 'LONG' %> <%= position.stock.ticker_symbol %> Purchase Value: $<%= position.value %> >> Current Value <%= position.current_value %> >> P&L <%= position.profit_loss %>
    </li>
  <% end %>
</ul>


<%= link_to 'Back to Portfolios', portfolios_path %>

<%= link_to 'New Position', new_portfolio_position_path(portfolio_id: params[:id]) %>